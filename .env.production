# Variables de Entorno - Producción
# ==================================
# 
# Este archivo contiene las variables de entorno para producción.
# Copia este archivo a .env y configura tus valores.

# ==================== API ====================
API_HOST=0.0.0.0
API_PORT=8000

# ==================== API KEYS ====================
ODDS_API_KEY=

# ==================== EMAIL ====================
EMAIL_ENABLED=false
EMAIL_SMTP_SERVER=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_ADDRESS=
EMAIL_PASSWORD=
EMAIL_RECIPIENT=

# ==================== DATABASE ====================
DB_PATH=apuestas_tracker.db

# ==================== MODELO ====================
MODEL_PATH=modelos/production/random_forest_calibrado.pkl
MODEL_BACKUP_DIR=modelos/archive

# ==================== DATOS ====================
DATA_PATH=datos/processed/dataset_final.csv
DATA_BACKUP_DIR=backups

# ==================== PARÁMETROS DE APUESTA ====================
EV_THRESHOLD=0.03
EV_THRESHOLD_ALERT=0.05
BANKROLL_INICIAL=1000

# ==================== KELLY CRITERION ====================
KELLY_ENABLED=true
KELLY_FRACTION=0.25

# ==================== BOOKMAKERS ====================
ODDS_REGIONS=eu,us
ODDS_MARKETS=h2h
ODDS_FORMAT=decimal
ODDS_MAX_REQUESTS_PER_MONTH=500
ODDS_WARNING_THRESHOLD=50

# ==================== CACHE ====================
CACHE_DIR=datos/cache_cuotas
CACHE_DURATION_MINUTES=30

# ==================== AUTOMATIZACIÓN ====================
RETRAIN_STRATEGY=semanal
RETRAIN_THRESHOLD_MATCHES=100

# ==================== LOGGING ====================
LOG_DIR=logs
LOG_LEVEL=INFO

# ==================== PRODUCCIÓN ====================
# Descomentar en producción
